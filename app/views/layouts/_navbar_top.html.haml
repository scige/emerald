.navbar-header
  %button.navbar-toggle.collapsed{:type=>"button", "data-toggle"=>"collapse", "data-target"=>".navbar-collapse"}
    %span.sr-only Toggle navigation
    %span.icon-bar
    %span.icon-bar
  = link_to "官方网站", root_path, :class=>"navbar-brand"
.collapse.navbar-collapse
  %ul.nav.navbar-nav
    %li{:class => (controller_name=="home"?"active":nil)}= link_to "首页", root_path
    %li{:class => (controller_name=="articles"?"active":nil)}= link_to "拼写纠错", articles_path
    %li{:class => (controller_name=="words"?"active":nil)}= link_to "词语管理", words_path
  %ul.nav.navbar-nav.navbar-right
    - if user_signed_in?
      %li.dropdown
        %a{"data-toggle"=>"dropdown", :href=>"#"}
          = "欢迎您，#{current_user.email}"
          %b.caret
        %ul.dropdown-menu{:role=>"menu", "aria-labelledby"=>"label"}
          %li{:role=>"presentation"}
            %a{:role=>"menuitem", :tabindex=>"-1", :href=>root_path} 个人主页
          %li{:role=>"presentation"}
            %a{:role=>"menuitem", :tabindex=>"-1", :href=>destroy_user_session_path, "data-method"=>"delete"} 退出登录
    - else
      %li= link_to "注册", new_user_registration_path
      %li= link_to "登录", new_user_session_path

